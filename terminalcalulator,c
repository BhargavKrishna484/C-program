#include <stdio.h>
int main() {
    int a,b;
    char op;
    printf("enter the value of a,b and op:");
    scanf("%d%d %c",&a,&b,&op);
    switch(op)
    {
        case'+':printf("the addition of %d",a+b);
        break;
        case'-':printf("the subraction of %d",a-b);
        break;
        case'*':printf("the multiplication of %d",a*b);
        break;
        case'/':printf("the quocent of %d",a/b);
        break;
        case'%':printf("the remainder of %d",a%b);
        break;
        defult:printf("invalid output");
        break;
    }
}
  
